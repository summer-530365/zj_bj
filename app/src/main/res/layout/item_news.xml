<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/item_news_iv_icon"
            android:scaleType="fitXY"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/news_pic_default"
            />

        <LinearLayout
            android:layout_toRightOf="@+id/item_news_iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_news_tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻的标题"
                android:lines="2"

                />
            <TextView
                android:id="@+id/item_news_tv_pubdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻的时间"
                android:singleLine="true"

                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_news_comment_num"
            />



    </RelativeLayout>


</LinearLayout>